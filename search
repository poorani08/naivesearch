#include <iostream>
#include <string>
using namespace std;

int main() {
   
    string text="Hellothisistext";
    string patt="text";
    int i,j,ct=0;
    for(i=0;i <=text.length()-4 ; i++){
        for(j =0; j <= patt.length();j++){
            ct=0;
            if(text[i]==patt[j] ){
                 ct++;
                 if (ct==patt.length()){
                     cout << i- text.length();
                     break;
                 }
                }
            else{
                j=0;
            }
        }
    }
}
